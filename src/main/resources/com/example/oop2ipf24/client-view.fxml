<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop2ipf24.Controllers.ClientController">
   <children>
      <!-- Title Label -->
      <Label layoutX="125.0" layoutY="20.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Showtimes" />

      <!-- Table for Showtimes -->
      <TableView fx:id="showtimeTable">
         <columns>
            <TableColumn fx:id="timeColumn" text="Time" />
            <TableColumn fx:id="dateColumn" text="Date" />
         </columns>
      </TableView>

      <!-- Buttons -->
      <Button fx:id="backButton" layoutX="272.0" layoutY="244.0" mnemonicParsing="false" style="-fx-background-color: #f0f0f0;" text="Back" />
      <Button fx:id="buyTicketButton" layoutX="257.0" layoutY="149.0" mnemonicParsing="false" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Buy Ticket" />
   </children>
</AnchorPane>
